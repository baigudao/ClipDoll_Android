<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/new_background_color"
              android:orientation="vertical">

    <include layout="@layout/title_bar"/>

    <com.happy.moment.clip.doll.view.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--上个方块-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/background_new_setting_white"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25dp"
                    android:text="如果您有遇到问题或有好的意见,可留言给我们"
                    android:textColor="@color/new_third_text_color"
                    android:textSize="15sp"/>

                <RelativeLayout
                    android:id="@+id/rl_input_word"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/border_about_us_background_view"
                    android:clickable="true">

                    <EditText
                        android:id="@+id/et_put_feed_back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:background="@null"
                        android:hint="在此输入您的建议和反馈"
                        android:maxLines="6"
                        android:textColor="@color/new_third_text_color"
                        android:textColorHint="@color/new_fourth_text_color"
                        android:textSize="16sp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_word_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/new_fourth_text_color"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/"
                            android:textColor="@color/new_fourth_text_color"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="500"
                            android:textColor="@color/new_fourth_text_color"/>

                    </LinearLayout>

                </RelativeLayout>

                <Button
                    android:id="@+id/btn_commit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/background_tijiao"
                    android:enabled="false"/>

            </LinearLayout>

            <!--下个方块-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/background_new_setting_white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:text="您还可以通过以下两种方式找到我们"
                    android:textColor="@color/new_third_text_color"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="30dp"
                    android:text="方式一：添加微信公众号"
                    android:textColor="@color/new_fourth_text_color"/>

                <RelativeLayout
                    android:id="@+id/rl_copy1"
                    android:layout_width="wrap_content"
                    android:layout_height="41dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/background_about_us_view"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/tv_weixin_num"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="woaizhuawa"
                        android:textColor="@color/new_third_text_color"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/btn_copy1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="25dp"
                        android:layout_toRightOf="@id/tv_weixin_num"
                        android:text="点击复制"
                        android:textColor="@color/new_fourth_text_color"
                        android:textSize="15sp"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="15dp"
                    android:text="方式二：关注微博（获取更多最新消息）"
                    android:textColor="@color/new_fourth_text_color"/>

                <RelativeLayout
                    android:id="@+id/rl_copy2"
                    android:layout_width="wrap_content"
                    android:layout_height="41dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/background_about_us_view"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/tv_weibo_num"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="我爱抓娃娃正版包邮"
                        android:textColor="@color/new_third_text_color"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/btn_copy2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="25dp"
                        android:layout_toRightOf="@id/tv_weibo_num"
                        android:text="点击复制"
                        android:textColor="@color/new_fourth_text_color"
                        android:textSize="15sp"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </com.happy.moment.clip.doll.view.MyScrollView>

</LinearLayout>