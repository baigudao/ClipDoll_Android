<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/new_second_background_color"
              android:gravity="center_horizontal"
              android:orientation="horizontal">

    <View
        android:layout_width="5dp"
        android:layout_height="150dp"
        android:background="@color/new_second_background_color"/>

    <RelativeLayout
        android:id="@+id/rl_item_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/background_home_item_view">

        <ImageView
            android:id="@+id/iv_room"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/wawa_default0"/>

        <TextView
            android:id="@+id/tv_room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_room"
            android:layout_marginLeft="15dp"
            android:text="美发屋好多公仔"
            android:textColor="@color/pure_white_color"
            android:textSize="18sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_room_name"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/iv_game_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_gold"/>

            <TextView
                android:id="@+id/tv_cost_coin_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@id/iv_game_coin"
                android:text="20币/次"
                android:textColor="#ff562b"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_state_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="空闲中"
                android:textColor="@color/pure_white_color"/>

            <TextView
                android:id="@+id/tv_state_playing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="游戏中"
                android:textColor="@color/pure_white_color"
                android:visibility="gone"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="5dp"
        android:layout_height="150dp"
        android:background="@color/new_second_background_color"/>

</LinearLayout>
