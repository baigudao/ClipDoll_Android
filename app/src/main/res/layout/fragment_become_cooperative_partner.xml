<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_color"
              android:orientation="vertical">

    <include layout="@layout/title_bar"/>

    <ImageView
        android:id="@+id/iv_cooperative_partner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/personal_image_partner"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/become_cooperative_partner_background">

        <View
            android:id="@+id/view_center"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/view_center"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:text="添加客服微信号"
            android:textColor="@color/main_text_color"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/view_center"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:text="咨询开通详情"
            android:textColor="@color/main_text_color"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:layout_below="@id/view_center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_weixin_num"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:background="@drawable/border_about_us_background_view"
                android:gravity="center"
                android:text="motiyasi"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/btn_copy"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/tv_weixin_num"
                android:background="@drawable/btn_background_selector"
                android:text="点击复制"
                android:textColor="@drawable/btn_text_background_selector_copy"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>