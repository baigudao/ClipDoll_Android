<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FCF7EE"
              android:orientation="vertical">

    <include layout="@layout/title_bar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_QR_code_share"
            android:layout_width="300dp"
            android:layout_height="340dp"
            android:layout_centerHorizontal="true"
            android:background="#FCF7EE"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_QR_code"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:background="@drawable/order_icon_image"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:text="长按二维码，添加微信客服处理提现操作"
                android:textColor="@color/main_text_color"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_QR_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="260dp"
            android:text="点击图中二维码发送至微信"
            android:textColor="@color/main_text_color"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:text="添加客服微信号"
        android:textColor="@color/fifth_text_color"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/tv_weixin_num"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="@drawable/border_about_us_background_view"
            android:gravity="center"
            android:text=""
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btn_copy"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/tv_weixin_num"
            android:background="@drawable/btn_background_selector"
            android:text="点击复制"
            android:textColor="@drawable/btn_text_background_selector_copy"/>

    </RelativeLayout>

</LinearLayout>