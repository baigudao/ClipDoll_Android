<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/new_second_background_color"
              android:orientation="horizontal">

    <View
        android:layout_width="10dp"
        android:layout_height="70dp"/>

    <RelativeLayout
        android:id="@+id/rl_id"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:id="@+id/rl_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:background="@drawable/background_recharge">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_chong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="充"
                    android:textColor="@color/new_background_color"/>

                <TextView
                    android:id="@+id/tv_recharge_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100币"
                    android:textColor="@color/new_background_color"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_recharge_give_coin_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="送100币"
                    android:textColor="@color/new_background_color"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_recharge_money_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/background_recharge_bottom"
                android:gravity="center"
                android:text="¥10元"
                android:textColor="@color/pure_white_color"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_first_recharge_give_coin_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/background_recharge_top"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:text="首充再送30币"
            android:textColor="@color/pure_white_color"
            android:textSize="12sp"/>

    </RelativeLayout>

    <View
        android:layout_width="10dp"
        android:layout_height="70dp"/>

</LinearLayout>