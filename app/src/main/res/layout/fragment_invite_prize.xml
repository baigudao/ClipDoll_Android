<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/pure_white_color"
              android:orientation="vertical">

    <include layout="@layout/title_bar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/invite_icon_images"/>

        <LinearLayout
            android:id="@+id/ll_invite_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_invite_num1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/colorBlack"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/main_color"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/tv_invite_num2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@color/colorBlack"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/main_color"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/tv_invite_num3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@color/colorBlack"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/main_color"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/tv_invite_num4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@color/colorBlack"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/main_color"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/tv_invite_num5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@color/colorBlack"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/main_color"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/tv_invite_num6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@color/colorBlack"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/main_color"
                android:textSize="25sp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_invite_num"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="40dp"
            android:text="邀请好友完成注册，你和朋友都将获得50个游戏币，可累加。邀请越多获赠越多，最多1000币。"
            android:textColor="@color/main_text_color"
            android:textSize="16sp"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_share_num"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_background_share_invite_num"
        android:text="分享我的邀请码"
        android:textColor="@color/main_color"
        android:textSize="18sp"/>

</LinearLayout>